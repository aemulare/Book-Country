                                                <option disabled selected value="">&lt;Select heating type&gt;</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="AirConditioningType.Id">Air conditioning</label>
                                            <select asp-for="AirConditioningType.Id" asp-items="ViewBag.AirConditioningTypes" class="form-control" style="max-width: 250px">
                                                <option disabled selected value="">&lt;Select air conditioning type&gt;</option>
                                            </select>
                                        </div>*@
                                        <div class="form-group">
                                            <label asp-for="DeweyCode">DeweyCode</label>
                                            <input asp-for="DeweyCode" maxlength="256" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-sm-5">
                                        <div class="form-group">
                                            <label asp-for="Price">Price</label>
                                            <input asp-for="Price" type="text" maxlength="4" class="form-control" style="max-width: 120px">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Quantity">Quantity</small></label>
                                            <input asp-for="Quantity" type="text" maxlength="10" class="form-control" style="max-width: 100px">
                                        </div>
