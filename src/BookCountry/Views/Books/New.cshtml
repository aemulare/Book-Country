                                    <label asp-for="Title">Title</label>
                                    <input asp-for="Title" class="form-control" maxlength="64">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Edition">Edition</label>
                                    <input asp-for="Edition" class="form-control" maxlength="64">
                                </div>
                                <div class="form-group">
                                    <label asp-for="PublishedOn">PublishedOn</label>
                                    <input asp-for="PublishedOn" class="form-control" maxlength="64">
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label asp-for="PublisherId">PublisherId</label>
                                            <input asp-for="PublisherId" class="form-control" maxlength="2" style="max-width: 60px;">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="LanguageId">LanguageId</label>
                                            <input asp-for="LanguageId" class="form-control" maxlength="16" style="max-width: 160px;">
                                        </div>
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <label asp-for="FormatId">FormatId</label>
                                            <input asp-for="FormatId" class="form-control" maxlength="64">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Isbn">Isbn</label>
                                            <input asp-for="Isbn" class="form-control" maxlength="13" style="max-width: 200px;">
