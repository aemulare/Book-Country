    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="text-muted small pull-right">Created on: <i class="fa fa-clock-o"></i> 
                    
                </div>
                <div class="ibox-content">

                    <form id="property" asp-action="Create" role="form" method="post">
                        <div class="row">
                            <div class="col-sm-6">
                                @*<p>
                                    <img src="~/images/@Model.Photo" class="img-responsive" style="background-color: lightgray" />
                                </p>*@
