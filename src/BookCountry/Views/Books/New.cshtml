@model BookCountry.Models.Book

<form id="property" asp-action="Create" role="form" method="post">
    <br />
    <br/>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" maxlength="255">
    </div>
    <div class="form-group">
        <label asp-for="Edition">Edition</label>
        <input asp-for="Edition" class="form-control" maxlength="32" width="">
    </div>
    <div class="form-group">
        <label asp-for="PublishedOn">Published On</label>
        <input asp-for="PublishedOn" type="date" class="form-control" maxlength="32">
    </div>
    <div class="form-group">
        <label asp-for="Publisher">Publisher</label>
        <input asp-for="Publisher" class="form-control" maxlength="128">
    </div>
    <div class="form-group">
        <label asp-for="Language" for="language">Language</label>
        <select class="form-control" id="language">
            <option>English</option>
            <option>Spanish</option>
            <option>Russian</option>
            <option>French</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Format" for="book-format">Format</label>
        <select class="form-control" id="book-format">
            <option>hardcover</option>
            <option>paperback</option>
            <option>e-book</option>
            <option>audiobook</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Isbn">ISBN13</label>
        <input asp-for="Isbn" class="form-control" maxlength="15">
    </div>
    <div class="form-group">
        <label asp-for="Format">Format</label>
        <input asp-for="Format" class="form-control" maxlength="32">
    </div>
    <div class="form-group">
        <label asp-for="DeweyCode">Dewey Code</label>
        <input asp-for="DeweyCode" maxlength="256" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price, $</label>
        <input asp-for="Price" type="text" maxlength="6" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" type="text" maxlength="10" class="form-control">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">New Book</button>
        &nbsp;
        <a class="btn btn-white" asp-controller="Books" asp-action="Index">Cancel</a>
    </div>
</form>