@model IEnumerable<BookCountry.Models.Book>

<h1>This page is to show Books</h1>
<br/>
<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Edition</th>
        <th>Published on</th>
        <th>Publisher</th>
        <th>Language</th>
        <th>Format</th>
        <th>ISBN13</th>
        <th>Dewey code</th>
        <th>Price, $</th>
        <th>Quantity</th>
    </tr>
    @foreach(var book in Model)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.Title</td>
            <td>@book.Edition</td>
            <td>@book.PublishedOn.Value.ToString("yyyy-MM-dd")</td>
            <td>@book.Publisher.Name</td>
            <td>@book.Language.Name</td>
            <td>@book.Format.Name</td>
            <td>@book.Isbn</td>
            <td>@book.DeweyCode</td>
            <td>@book.Price</td>
            <td>@book.Quantity</td>
        </tr>
    }
</table>
