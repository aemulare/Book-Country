@model IEnumerable<BookCountry.Models.Book>

<h1> </h1>
<form class="well" role="form" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <div class="col-lg-10">
                    <input type="text" class="form-control" placeholder="Search for..." style="max-width: 1800px">
                </div>
                <div>
                    <button class="btn btn-default btn-info" type="button">Go!</button>
                </div>
            </div>
               
            </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
</form>
<hr/>
<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-sm-4">
            <div class="card" style="width: 45rem;">
                <a asp-action="Show" asp-route-bookId="@book.Id">
                    <img class="card-img-top img-responsive imgborder s1" src="@book.Cover" alt="Card image cap">
                </a>
                <div class="card-block">
                    <h4 class="card-title"><strong>@book.Title</strong></h4>
                    <p class="card-text">by <strong>@book.Authors</strong></p>
                </div>
                @*<ul class="list-group list-group-flush">
                    <li class="list-group-item cover"><strong>Format:&nbsp;</strong>@book.Format</li>
                    <li class="list-group-item publisher"><strong>Publisher:&nbsp;</strong>@book.Publisher</li>
                    <li class="list-group-item book-lang"><strong>Language:&nbsp;</strong>@book.Language</li>
                    <li class="list-group-item isbn"><strong>ISBN-13:&nbsp;</strong>@book.Isbn</li>
                </ul>*@
                <div class="card-block">
                    @*<a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>*@
                </div>
                <br/>
                <br/>
                <br />
            </div>
        </div>
    }   
</div>