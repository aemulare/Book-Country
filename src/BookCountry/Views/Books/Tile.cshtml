@model IEnumerable<BookCountry.Models.Book>

<h1>This page is to show Books in tile layout</h1>


<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-lg-4">
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="http://placehold.it/250x350" alt="Card image cap">
                <div class="card-block">
                    <h4 class="card-title">@book.Title</h4>
                    <p class="card-text">by First Last</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item fa fa-book">Cras justo odio</li>
                    <li class="list-group-item">Dapibus ac facilisis in</li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
                <div class="card-block">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
    }   
</div>