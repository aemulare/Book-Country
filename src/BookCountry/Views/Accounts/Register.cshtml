@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Registration";
}
@model RegistrationViewModel

<div class="middle-box text-center loginscreen   animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">BC</h1>
        </div>
        <h3>Register to Book Country</h3>
        <p>Online library catalog</p>
        <form class="m-t" role="form" method="post" asp-controller="Accounts" asp-action="Register">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password confirmation" asp-for="PasswordConfirmation">
                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

            <p class="text-muted text-center"><small>Already have an account?</small>
            </p>
            <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Login", "Pages")">Login</a>
        </form>
        <p class="m-t"> <small>Maria Romanova &copy; 2017</small>
        </p>
    </div>
</div>
